{
  "singleQuote": true,
  "printWidth": 80,
  "semi": false,
  "trailingComma": "all",
  "plugins": ["@ianvs/prettier-plugin-sort-imports"],
  "importOrderParserPlugins": ["typescript", "decorators-legacy"],
  "importOrder": [
    "<BUILTIN_MODULES>",
    "<THIRD_PARTY_MODULES>",
    "",
    "^@nestjs/(.*)$",
    "",
    "^nest/(.*)$",
    "",
    "^drizzle-orm/(.*)$",
    "^@(.*)$",
    "",
    "^[./]"
  ]
}
